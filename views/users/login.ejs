<% layout("/layouts/boilerplate") %>
<style>
    @media (max-width:600px) {
        .col-6{
            width: 80%;
            margin: auto;
        }
    }
</style>
<body>
    <div class="row mt-3">
        <h3 class="col-6 offset-3 ">Login</h3>
        <div class="col-6 offset-3  mt-2">
            <form method="POST" action="/login" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input
                     name="username"
                      id="username" 
                      class="form-control" 
                      type="text"
                      required
                    >
                    
                </div>

                
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input
                     name="password"
                      id="password" 
                      class="form-control" 
                      type="password"
                      required
                    >
                    
                </div>
                <button class="btn btn-primary">Login</button><br/>
                <b class="mt-3">Need an account? <a href="/signup">Sign Up</a></b>
            </form>
        </div>
    </div>
</body>