  <div class="Navbar">
    <div class="nav-logo">
      <a class="navbar-brand logo" href="/listings"><i class="fa-regular fa-compass"></i></a>
      <a class="nav-link" href="/listings"><b>WanderHaven</b></a>
    </div>
    <div class="search">
      <form method="post" action="/listings/search">
        <input type="text" name="location" placeholder="Search by Location" required>
        <button class="btn search-btn" 
          type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search
        </button>
      </form>
    </div>
