  menubar.addEventListener("click", () => {
    if (menu == false) {
      showBox.style.display = "flex"; // Show the menu
      setTimeout(() => {
        showBox.style.opacity = "1"; // Fade in effect
      }, 10); // Small timeout to allow display change to take effect
      menu = true;
    } else {
      showBox.style.opacity = "0"; // Fade out effect
      setTimeout(() => {
        showBox.style.display = "none"; // Hide the menu after fading out
      }, 300); // Match this timeout with the CSS transition duration
      menu = false;
    }
  });

