      <a class="nav-link" href="/listing/<%=currUser._id%>/bookings"><b>Booking List</b></a>
      <a class="nav-link" href="/listings/<%=currUser._id%>/propertyList"><b>Property List</b></a>
    <% } %>
    
  </div>
</body>

