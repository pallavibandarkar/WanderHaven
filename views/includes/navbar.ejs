<body>
  <div class="Navbar">
    <div class="nav-logo">
      <a class="navbar-brand logo" href="/listings"><i class="fa-regular fa-compass"></i></a>
      <a class="nav-link" href="/listings">Explore</a>
    </div>
    <div class="search">
      <form>
        <input type="text" placeholder="Search Destination">
        <button class="btn search-btn" 
          type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search
        </button>
      </form>
    </div>
    <div class="menubar">
      <a><i class="fa-solid fa-bars"></i></a>
    </div>

    <div class="navbar-btns">
      <a class="nav-link" href="/listings/new">Airbnb your home</a>
      <% if(!currUser){ %>
        <a class="nav-link "  href="/signup"><b>Sign Up</b></a>
        <a class="nav-link" href="/login"><b>Log In</b></a>
      <% } %>
      <% if(currUser){%>
        <a class="nav-link" href="/logout"><b>Log Out</b></a>
      <% } %>
      
    </div>

  </div>
  <div class="navbar-btns-responsive">
    <a class="close"><i class="fa-solid fa-xmark"></i></a>
    <a class="nav-link" href="/listings/new">Airbnb your home</a>
    <% if(!currUser){ %>
      <a class="nav-link "  href="/signup"><b>Sign Up</b></a>
      <a class="nav-link" href="/login"><b>Log In</b></a>
    <% } %>
    <% if(currUser){%>
      <a class="nav-link" href="/logout"><b>Log Out</b></a>
    <% } %>
    
  </div>
</body>

<script>
  let menubar = document.querySelector(".menubar");
  let showBox = document.querySelector(".navbar-btns-responsive");
  let closeMenu = document.querySelector(".close")

  menubar.addEventListener("click",()=>{
    showBox.style.display="block"
  })
  closeMenu.addEventListener("click",()=>{
    showBox.style.display = "none"
  })
</script>