<% layout("/layouts/boilerplate")%>
<body>
    <div class="row">
    <div class="col-10 offset-1">
        <br>
    <h4>Create a new listing</h4>
    <form method="POST" action="/listings" class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
             name="listing[title]"
              placeholder="Add a catchy title" 
              class="form-control" 
              type="text"
              required
            >
            <div class="invalid-feedback">Please provide valid title</div> 
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" 
            placeholder="Enter description "
            class="form-control" 
            required
            ></textarea>
            <div class="invalid-feedback">Please provide short Description</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]"type="file"class="form-control" multiple required>

        </div>
        
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input 
            name="listing[price]"
            class="form-control" 
            placeholder="1200/-"
            required
            >
            <div class="invalid-feedback">Please provide valid price</div>
        </div>
        <div class="row mb-3">
            <div class="mb-3 col-md-4">
                <label for="Location" class="form-label">location</label>
                <input 
                name="listing[location]"
                class="form-control" 
                placeholder="Jaipur,Matheran,Goa"
                required
                >
                <div class="invalid-feedback">Please provide valid location</div>
            </div>
            
            
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input 
                name="listing[country]" 
                class="form-control"  
                placeholder="India"
                required>
                <div class="invalid-feedback">Please provide valid country</div>
            </div>
            <div class="row mb-3">
                <div class=" col-md-4 mt-2">
                    <label for="category" class="form-label">Category:</label>
                   <select name="listing[category]" class="col-md-6 form-select">
                       <option>Trending</option>
                       <option>Rooms</option>
                       <option>Iconic Cities</option>
                       <option>Mountain</option>
                       <option>Lake</option>
                       <option>Camping</option>
                       <option>Castles</option>
                       <option>Amazing pool</option>
                       <option>farms</option>
                       <option>Domes</option>
                       <option>Boats</option>
                       <option>Beach</option>
                       

                    </select>
                </div>

                <div class=" col-md-4 mt-2">
                    <label for="place" class="form-label">Type of place:</label>
                    <select name="listing[place]" class="col-md-6 form-select">
                       <option>An Entire Place</option>
                       <option>Rooms</option>
                       <option>Shared Room</option>
                    </select>
                </div>
            </div>

            <hr/>
            <div class="mb-3 row">
                <p><b>Some basics about your place</b></p>
                <div class="col-md-2 mt-2">
                    <label for="guests" class="form-label">Guests</label>
                    <input 
                    name="listing[guests]"
                    class="form-control" 
                    placeholder="1, 2, 3"
                    type="number"
                    required
                    >
                </div>
                <div class="col-md-2 mt-2">
                    <label for="bedrooms" class="form-label">Bedrooms</label>
                    <input 
                    name="listing[bedrooms]"
                    class="form-control" 
                    placeholder="1, 2, 3"
                    type="number"
                    required
                    >
                </div>
                <div class="col-md-2 mt-2">
                    <label for="beds" class="form-label">Beds</label>
                    <input 
                    name="listing[beds]"
                    class="form-control" 
                    placeholder="1, 2, 3"
                    type="number"
                    required
                    >
                </div>
                <div class="col-md-2 mt-2">
                    <label for="Bathrooms" class="form-label">Bathrooms</label>
                    <input 
                    name="listing[bathrooms]"
                    class="form-control" 
                    placeholder="1, 2, 3"
                    type="number"
                    required
                    >
                </div>
            </div>
            
        </div>
        
        <button class="btn btn-dark add-btn">
            Add
        </button>
        <br> <br><br>
    </form>
</div>
</div>
</body>
