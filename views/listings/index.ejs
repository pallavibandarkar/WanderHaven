<% layout("/layouts/boilerplate")%>
<style>
  #filters{
    display: flex;
    flex-wrap: nowrap; 
    overflow-x: auto; 
    padding: 1rem;
    scrollbar-width: thin; 
    scrollbar-color: #cccccc transparent;
    margin-bottom: 15px;
  }
  .filter{
    text-align: center;
    margin-right: 1.8rem;
    opacity: 0.7;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border: 1px black solid;
    border-radius: 1rem;
    display: flex;
    flex-shrink: 0;
    height: 3rem;
    padding: 1rem;
    margin-left: 3rem;
    align-items: center;
  }
  .filter a{
   text-decoration: none;
   color: black;
   opacity: 0.7;
  }
  .heart h3{
    position: absolute;
    top: 0;
    right: 0;
    padding: 10px;
    color: black;
  }
  .heart h3:hover{
    color: #fe424d;
  }
  #filters::-webkit-scrollbar {
    height: 8px;
  }

  #filters::-webkit-scrollbar-thumb {
    background-color: #cccccc;
    border-radius: 4px;
  }

  #filters::-webkit-scrollbar-track {
    background: transparent;
  }

  .listing-card .wishList{
    position: absolute;
    top: 10px;
    right: 25px;
    z-index: 10;
    color: white;
    font-size: 20px;
    cursor: pointer;
  }
  .wishList.active {
    color: #fe424d; /* Change to your desired active color */
  }
  #inWishList{
    color: #fe424d;
  }
  .hero{
    margin-top: 20px;
    width: 100%;
    height: 65vh;
    background-image: url("../../assets/hero.jpg");
    background-size: cover; /* Ensures the image covers the entire container */
    background-position: center center; /* Keeps the image centered */
    background-repeat: no-repeat; /* Prevents tiling of the background image */
    box-sizing: content-box;
    object-fit: cover;
    border-radius: 15px;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: white;
  }

  .hero h1 {
  font-size: 3rem;
  font-weight: bold;
  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.6);
  margin: 0;
}

.hero p {
  font-size: 1.2rem;
  margin-top: 10px;
  line-height: 1.6;
  font-weight: 500;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
}

@media (max-width: 768px) {
  .hero h1 {
    font-size: 2rem;
  }

  .hero p {
    font-size: 1rem;
  }
}
@media (max-width: 568px) {
  .hero h1 {
    font-size: 1.5rem;
  }

  .hero p {
    font-size: 0.8rem;
  }
}
@media (max-width: 568px) {
  .hero h1 {
    font-size: 1.2rem;
  }

  .hero p {
    font-size: 0.8rem;
  }
}

  @media (max-width:600px) {
    .hero{
      width: 100%;
      height: 50vh;
    }
  }
  .Explore{
    margin-top: 20px;
  }
</style>
<body>
    <div class="hero">
      <div class="hero-text">
        <h1>Welcome to Your Perfect Escape</h1>
        <p>Wherever you go, embrace the moment and create memories that last a lifetime.</p>
        
      </div>
    </div>
    <!-- <h2>All listings</h2> -->
    <!-- <form method="GET" action="/listings/new">
        <button>Create new Listing</button>
    </form> -->
    <h5 class="Explore">Explore Categories</h5>
    <div id="filters">
      <div class="filter">
        <a href="/listings/category/Trending">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </a>
      </div>
      <div class="filter">
        <a href="/listings/category/Rooms">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </a>
        
      </div>
      <div class="filter">
        <a href="/listings/category/Iconic Cities">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic Cities</p>
        </a>
        
      </div>
      <div class="filter">
        <a href="/listings/category/Mountain">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountain</p>
        </a>
        
      </div>
      <div class="filter">
        <a href="/listings/category/Lake">
          <div><i class="fa-solid fa-water"></i></div>
          <p>Lake</p>
        </a>
        
      </div>
      <div class="filter">
        <a href="/listings/category/Camping">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </a>
        
      </div>
      <div class="filter">
        <a href="/listings/category/Castles">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </a>
      </div>
      <div class="filter">
      <a href="/listings/category/Amazing pool">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pool</p>
      </a>
      </div>
      <div class="filter">
      <a href=/listings/category/farms">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>farms</p>
      </a>
      </div>
      <div class="filter">
      <a href="/listings/category/Domes">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </a>
      </div>
      <div class="filter">
      <a href="/listings/category/Boats">
        <div><i class="fa-solid fa-sailboat"></i></div>
        <p>Boats</p>
      </a>
      </div>
      <div class="filter">
      <a href="/listings/category/Beach">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
      </a>
      </div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" 
          type="checkbox" role="switch" 
          id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">
            Display total after taxes
          </label>
        </div>
      </div>
      
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-3">
        <%for(let listing of allListings){%>
          
            <div class="card col listing-card">
              <% if (listing.image && listing.image.length > 0) { %>
                <%if (wishList.includes(listing._id.toString())){%>
                  <a class="wishList active" id="inWishList"><i class="fa-solid fa-heart"></i></a>
                <%} else {%>
                  <a class="wishList" href="/listing/<%=listing._id%>/wishlist"><i class="fa-solid fa-heart"></i></a>
                <%}%> 
                
                <div  id="listingCarousel<%= listing._id %>" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <% listing.image.forEach((image, index) => { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <img src="<%= image.url %>" class="d-block w-90 listing-img" style="height: 300px;" alt="listing_image">
                            </div>
                        <% }) %>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#listingCarousel<%= listing._id %>" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                  </button>
                  <button class="carousel-control-next" type="button" data-bs-target="#listingCarousel<%= listing._id %>" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                  </button>
                </div>
            <% } else if (listing.image && listing.image.url) { %>
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
            <% } else { %>
                <img src="path/to/default-image.jpg" class="card-img-top show-img" alt="default_image">
            <% } %>
            
                <!-- <img src="<%=listing.image.url%>"
                class="card-img-top" alt="Listing_image" style="height:20rem;"/> -->
                <div class="card-body">
                 
                  <p class="card-text">
                    <p><b><%=listing.title%></b>
                    <br>
                    &#8377;<%=listing.price.toLocaleString("en-IN")%> /night
                    <i class="tax-info">&nbsp;&nbsp;+18%GST</i>
                    </p>
                  </p>
                  <a href="/listings/<%=listing._id%>" class="listing_links">View Details</a>
                </div>
              </div>
            
            <%}%>
          
    </div>
    
   
</body>
<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  let wishListIcons = document.querySelectorAll(".wishList")
  taxSwitch.addEventListener("click",()=>{
    console.log("clicked");
    let taxInfo = document.getElementsByClassName("tax-info");
  for(info of taxInfo){
    if(info.style.display !="inline"){
      info.style.display="inline"
    }else{
      info.style.display="none"
    }
  }
  });

  wishListIcons.forEach(icon => {
    icon.addEventListener("click", (event) => {
      // Remove active class from all icons
      wishListIcons.forEach(i => i.classList.remove("active"));
      
      // Add active class to the clicked icon
      event.currentTarget.classList.add("active");
      console.log("heart clicked");
    });
  });

  
</script>
